<%- include('../partials/head', {title: 'User List'}) %>
<%- include('../partials/navbar') %>

<div class="container text-center">
    <div class="row">
        <div class="col-md-12 mt-15">
            <h2>Buy Stock</h2>
        </div>
        <div class="col-md-12 mt-25">
            <h3> <%= stock.name %> </h3>
            <h3 class="mt-5"> Stock price :<%= stock.buy %> </h3>
            <h3 class="mt-5"> Your balance :<%= user.Account.balance %> </h3>
            <% if(stock.buy < user.Account.balance){ %>
              <form action="/users/<%= user.id %>/buy/stocks/<%= stock.id %>" method="post">
                <input type="submit" value="Buy Stock" class="btn btn-danger" style="width: 30%;">
              </form> 
              <% } else { %>
                <h3 class="color-red">You dont have sufficient balance</h3>
            <% } %> 
        </div>
        
    </div>
</div>
<%- include('../partials/footer') %>