<%- include('../partials/head', {title: 'User List'}) %>
<%- include('../partials/navbar') %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>

<div class="container text-center">
    <div class="row">
        <div class="col-md-12">
            <h2>Stock List</h2>
            <p class="color-green"><a href="/administrator/add">Add</a></p>
        </div>
        <div class="col-md-12">
            <!-- <a href="/users/signup">Buy Stock</a> -->
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Alias</th>
                    <th>Current Buy Price</th>
                    <th>Current Sell Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% Stocks.forEach(stock =>{ %>
                <tr>
                    <td>
                        <%=stock.name %>
                    </td>
                    <td><%=stock.alias %></td>
                    <td><%=stock.buy%></td>
                    <td><%=stock.sell%></td>
                    <td>
                      <a href="/administrator/<%=stock.id%>/edit">Edit</a> | <a href="/administrator/<%=stock.id%>/delete">Delete</a>
                    </td>
                </tr>
                <% })%>
            </tbody>
        </table>
        <div>
            <!-- <h3>No Stock</h3> -->
        </div>
    </div>
</div>
<%- include('../partials/footer') %>