<%- include('../partials/head', {title: 'Landing Page'}) %>
<%- include('../partials/navbar') %>
<div style="background-image: url('/img/stocks-building.jpg'); height: 37em; background-repeat: no-repeat;background-size: cover;position: relative;"></div>
    <div class="container">
        <div class="my-jumbotron abs-center">
            <div class="container-form text-center">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="color-grey4">Register</h1>
                        <p class="color-grey4">Plase fill the form below</p>
                    </div>

                    <div class="col-md-12">
                        <%if(err){%>
                        <div class="color-red">
                            <%= err.message %>
                        </div>
                        <% } %>
                    </div>
                    <div class="col-md-12">
                        <form action="/auth/signup" method="post">
                            <div>
                                <input type="text" id="name" name="name" class="form-control" placeholder="Input your full name">
                            </div>
                            <div class="mt-15">
                                <input type="email" id="email" name="email" class="form-control" placeholder="Input your email">
                            </div>
                            <div class="mt-15">
                                <input type="password" id="password" class="form-control" name="password" placeholder="Input your password">
                            </div>

                            <div class="mt-25">
                                <button type="submit" class="btn btn-danger btn-block">Submit</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-12 mt-15">
                        Already have an account?<a href="/auth/signin" class="color-red"> Sign Here</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>