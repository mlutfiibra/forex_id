<%- include('../partials/head', {title: 'Landing Page'}) %>
<%- include('../partials/navbar') %>
<div style="background-image: url('/img/stocks-building.jpg'); height: 37em; background-repeat: no-repeat;background-size: cover;position: relative;">
    <div class="container">
        <div class="my-jumbotron abs-center">
            <div class="container-form text-center">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="color_grey4">Login</h1>
                        <p class="color-grey4">Plase fill the form below</p>
                    </div>
                    <div class="col-md-12">
                        <%if(err){%>
                        <div class="color-red">
                            <%= err %>
                        </div>
                        <% } %>
                    </div>
                    <div class="col-md-12">
                        <form action="/auth/signin" method="post">
                            <div>
                                <input type="email" name="email" class="form-control" placeholder="Input your email">
                            </div>
                            <div class="mt-15">
                                <input type="password" name="password" class="form-control" placeholder="Input your password">
                            </div>
                            <div class="mt-25">
                                <button type="submit" class="btn btn-danger btn-block">Login</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-12 mt-15">
                        You don't have an account?<a href="/auth/signup" class="color-red"> Register here</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>