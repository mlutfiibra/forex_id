<%- include('../partials/head', {title: 'Landing Page'}) %>
<%- include('../partials/navbar') %>
<div class="container">
    <div class="container-form text-center">
        <div class="row">
            <div class="col-md-12">
                <h1>Login</h1>
            </div>
            <div>
                <% if(err){ %>
                    <h6>Error : <%=err %></h6>
                <%}%>
            </div>
            <div class="col-md-12">
                <form action="/users/signin" method="post">
                    <div>
                        <input type="email" name="email" class="form-group" placeholder="Input your email">
                    </div>
                    <div>
                        <input type="password" name="password" class="form-group" placeholder="Input your password">
                    </div>
                    <div>
                        <button type="submit">Sign In</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>